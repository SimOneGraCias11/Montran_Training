<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    <bean class="springdemo.springassign.Student" id="p1">
    
    <property name= "id" value="11"/>
<property name= "name" value="Simone"/>
<property name= "grade" value="B"/>
</bean>

<bean class="springdemo.springassign.Student" id="p2">
<constructor-arg index ="1" value="Sinora"/>
<constructor-arg index ="0" value="12"/>
<constructor-arg index ="2" value="A"/>
</bean>
</beans>
